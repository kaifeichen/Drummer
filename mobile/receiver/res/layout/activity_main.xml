<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReceiverActivity" >

    <Button
        android:id="@+id/start_imu_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Start Move" />

    <Button
        android:id="@+id/stop_imu_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Stop Move" />
    
    <Button
        android:id="@+id/report_door_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Report Door" />
    
    <Button
        android:id="@+id/report_corner_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Report Corner" />

</LinearLayout>